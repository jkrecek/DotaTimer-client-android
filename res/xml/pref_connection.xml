<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="@string/pref_default_server_address"
        android:inputType="textCapWords"
        android:key="@string/pref_key_server_address"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_server_address" />

    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="@string/no_input"
        android:inputType="textCapWords"
        android:key="@string/pref_key_team_name"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_team_name" />
        
    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="@string/no_input"
        android:inputType="textCapWords"
        android:key="@string/pref_key_team_password"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_team_password" />

</PreferenceScreen>